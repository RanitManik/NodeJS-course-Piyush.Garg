<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern File Upload</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        form {
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
            width: 400px;
        }

        #upload-container {
            border: 2px dashed #d3d3d3;
            border-radius: 8px;
            padding: 30px;
            position: relative;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        #upload-container:hover {
            border-color: #0091ff;
            background-color: #f0faff;
        }

        #upload-container input[type="file"] {
            display: none;
        }

        #upload-container p {
            color: #888888;
            margin-bottom: 10px;
        }

        #upload-container span {
            color: #0091ff;
            font-weight: bold;
        }

        button {
            background: #0091ff;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background 0.3s ease;
        }

        button:hover {
            background: #0078d4;
        }
    </style>
</head>
<body>
<form action="/upload" method="post" enctype="multipart/form-data">
    <div id="upload-container" onclick="document.getElementById('image').click();">
        <input type="file" name="image" id="image">
        <p>Drag and Drop file here or <span>Choose file</span></p>
    </div>
    <br>
    <button type="submit">Upload</button>
</form>
<script>
  const fileInput = document.getElementById('image');
  const uploadContainer = document.getElementById('upload-container');

  fileInput.addEventListener('change', () => {
    if (fileInput.files.length > 0) {
      uploadContainer.innerHTML = `<p>Selected File: <span>${fileInput.files[0].name}</span></p>`;
    }
  });
</script>
</body>
</html>